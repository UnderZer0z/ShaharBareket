<section id="contect">

    <h2 class="text-[24px] font-[600] ml-[2px] mb-[4px]">
    Contect Me
    </h2>

    <hr class="my-[16px] text-[#3A3A3A] border-dashed border-t-[2px]">

    <p id="responseMsg"></p>

    <form id="contactForm" action="https://script.google.com/macros/s/AKfycbxSv6nrZRWyeufrQCKHODbNUNX80q-gGJ8QunBOS2nmdwA5-KyJcd4biYwZMoiDVFmoUA/exec" method="post" class="rounded-[8px] flex flex-col gap-2">

        <input type="text" name="name" placeholder="Full Name" class="bg-[#2c2c2c] p-2 rounded-[4px] ">

