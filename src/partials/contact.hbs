        <textarea name="message" id="message" placeholder="Text..." cols="3" class="bg-[#2c2c2c] p-2 rounded-[4px] resize-none h-[100px]"></textarea>

        <button type="submit" class="font-mono hover:underline w-[100px] ml-auto bg-[#000] font-semibold cursor-pointer">Submit</button>

    </form>

</section>