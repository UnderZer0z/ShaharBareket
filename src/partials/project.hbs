<article id="{{id}}" class="flex flex-col max-w-[360px] w-full transition-all duration-300 border-[8px] border-[#0e0e0e]
 hover:shadow-[0_0_0px_1px_#ffffff36] bg-[#0e0e0e] text-white rounded-[2px] cursor-pointer">
    <h3 class="font-bold px-[4px] inline ">
        {{title}}
    </h3>  
    <img src={{img}} old-src="./Lomcode.png" width="200" height="182" 
        class="object-cover w-full h-[200px] rounded-[2px] " alt="">
    <p class="px-[4px] mt-[4px] text-[14px] font-[500] font-mono">
        {{text}}
    </p>
</article>