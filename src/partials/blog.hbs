<section id="blog">

    <h2 class="text-[24px] font-[600] ml-[2px] mb-[4px]">
    Blog & Rumblings
    </h2>

    <hr class="my-[16px] text-[#3A3A3A] border-dashed border-t-[2px]">

    <ul class="flex flex-col gap-[20px]">
      {{#if latestPosts}}
        {{#each latestPosts}}
          <li class="hover:bg-[#0000003a] p-1 rounded-[8px] transition-all duration-300">
              <a href="{{this.url}}">
                  <article class="cursor-pointer m:flex">
                      <img src="{{this.img}}" class="rounded-[4px] w-full m:w-[160px] m:h-[100px] !min-h-[100px]  !min-w-[160px] max-w-[312px] max-h-[195px] object-cover" alt="blog-post-image" loading="lazy" width="312" height="195">
                      <div class="p-2 sm:pt-0">
                          <h3 class="text-[18px] font-bold">{{this.title}}</h3>
                          <p class="text-[16px]">
                            {{this.excerpt}}
                          </p>
                      </div>
                  </article>
              </a>
          </li>
        {{/each}}
